<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrefsThemeToolbar" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:layout">@layout/fragment_preference_container</item>
    </style>

    <style name="PrefsThemeCollapsingToolbar" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:layout">@layout/fragment_preference_container_home</item>
    </style>

    <style name="PrefsThemeNoToolbar" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:layout">@layout/fragment_preference_container_no_toolbar</item>
    </style>

    <style name="Widget.MaterialButton" parent="Widget.Material3.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.MaterialButton.Red" parent="Widget.MaterialButton">
        <item name="backgroundTint">?attr/colorError</item>
        <item name="android:textColor">?attr/colorOnError</item>
        <item name="rippleColor">@color/color_material_ripple_no_tint</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">?attr/colorSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="Preference.TitleText" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Preference.SummaryText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Material3.TitleLarge" />

    <style name="Toolbar.TitleText.Collapsed">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="Toolbar.TitleText.Expanded" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="MaterialAlertDialog.Title.TextAppearance" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MaterialAlertDialog.Body.TextAppearance" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MaterialAlertDialog.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:background">?attr/colorSurfaceContainer</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/MaterialAlertDialog.Title.TextAppearance</item>
    </style>

    <style name="MaterialAlertDialog.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:background">?attr/colorSurfaceContainer</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/MaterialAlertDialog.Body.TextAppearance</item>
    </style>

    <style name="MaterialAlertDialog.Button.Text" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:backgroundTint">?attr/colorSurfaceContainer</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MaterialComponents.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">?attr/colorSurfaceContainer</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Title.Text
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Body.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.Button.Text
        </item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog.Button.Text
        </item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

</resources>